@model Web.Models.PersistentLogViewModel

@{
    ViewData["Title"] = "Log Persistente";
}

<h1>@ViewData["Title"]</h1>

<div class="d-flex justify-content-between mb-4">
    <form asp-action="PersistentLogs" method="get" class="row g-3 align-items-end">
        <div class="col-auto">
            <label for="entityTypeFilter" class="form-label">Filtrar por Tipo de Entidade</label>
            <select name="entityTypeFilter" id="entityTypeFilter" class="form-select" onchange="this.form.submit()">
                <option value="">Todos</option>
                <option value="User" selected="@("User".Equals(Model.EntityTypeFilter))">Usuário</option>
                <option value="Computer" selected="@("Computer".Equals(Model.EntityTypeFilter))">Computador</option>
                <option value="Monitor" selected="@("Monitor".Equals(Model.EntityTypeFilter))">Monitor</option>
                <option value="Periferico" selected="@("Periferico".Equals(Model.EntityTypeFilter))">Periférico</option>
                <option value="Colaborador" selected="@("Colaborador".Equals(Model.EntityTypeFilter))">Colaborador</option>
            </select>
        </div>
        <div class="col-auto">
            <label for="actionTypeFilter" class="form-label">Filtrar por Tipo de Ação</label>
            <select name="actionTypeFilter" id="actionTypeFilter" class="form-select" onchange="this.form.submit()">
                <option value="">Todas</option>
                <option value="Create" selected="@("Create".Equals(Model.ActionTypeFilter))">Inclusão</option>
                <option value="Update" selected="@("Update".Equals(Model.ActionTypeFilter))">Alteração</option>
                <option value="Delete" selected="@("Delete".Equals(Model.ActionTypeFilter))">Remoção</option>
            </select>
        </div>
        <div class="col-auto">
            <a asp-action="PersistentLogs" class="btn btn-secondary">Limpar Filtros</a>
        </div>
    </form>
    <div>
        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#confirmClearLogsModal">
            Limpar Log Persistente
        </button>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Timestamp</th>
                <th>Tipo de Entidade</th>
                <th>Tipo de Ação</th>
                <th>Realizado Por</th>
                <th>Detalhes</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Logs)
            {
                <tr>
                    <td>@item.Timestamp.ToString("g")</td>
                    <td>@item.EntityType</td>
                    <td>@item.ActionType</td>
                    <td>@item.PerformedBy</td>
                    <td><pre>@item.Details</pre></td>
                </tr>
            }
        </tbody>
    </table>
</div>

<nav aria-label="Page navigation">
    <ul class="pagination">
        @if (Model.PageNumber > 1)
        {
            <li class="page-item">
                <a class="page-link" href="@Url.Action("PersistentLogs", new { pageNumber = Model.PageNumber - 1, pageSize = Model.PageSize, entityTypeFilter = Model.EntityTypeFilter, actionTypeFilter = Model.ActionTypeFilter })">Anterior</a>
            </li>
        }
        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                <a class="page-link" href="@Url.Action("PersistentLogs", new { pageNumber = i, pageSize = Model.PageSize, entityTypeFilter = Model.EntityTypeFilter, actionTypeFilter = Model.ActionTypeFilter })">@i</a>
            </li>
        }
        @if (Model.PageNumber < Model.TotalPages)
        {
            <li class="page-item">
                <a class="page-link" href="@Url.Action("PersistentLogs", new { pageNumber = Model.PageNumber + 1, pageSize = Model.PageSize, entityTypeFilter = Model.EntityTypeFilter, actionTypeFilter = Model.ActionTypeFilter })">Próximo</a>
            </li>
        }
    </ul>
</nav>

<div class="modal fade" id="confirmClearLogsModal" tabindex="-1" aria-labelledby="confirmClearLogsModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmClearLogsModalLabel">Confirmar Limpeza de Logs</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Tem certeza de que deseja limpar permanentemente todos os logs persistentes? Esta ação não pode ser desfeita.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <form asp-action="ClearPersistentLogs" method="post">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">Limpar Logs</button>
                </form>
            </div>
        </div>
    </div>
</div>
