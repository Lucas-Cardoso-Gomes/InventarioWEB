@model Web.Models.Chamado

@{
    ViewData["Title"] = "Excluir Chamado";
}

<h1>Excluir Chamado</h1>

<h3>Tem certeza que deseja excluir este chamado?</h3>
<div>
    <h4>Chamado</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AdminNome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AdminNome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ColaboradorNome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ColaboradorNome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataCriacao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataCriacao)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Excluir" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Voltar a Lista</a>
    </form>
</div>
