@model IEnumerable<Web.Models.Chamado>

@{
    ViewData["Title"] = "Chamados";
}

<h1>Chamados</h1>

<p>
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Create" class="btn btn-primary">Abrir Novo Chamado</a>
    }
    @if (User.IsInRole("Admin") || User.IsInRole("Coordenador"))
    {
        <a asp-action="Dashboard" class="btn btn-info">Ver Dashboard</a>
    }
</p>

@{
    var selectedStatuses = ViewBag.SelectedStatuses as List<string> ?? new List<string> { "Aberto", "Em Andamento" };
}

<div class="card mb-4">
    <div class="card-header">
        Filtros de Status
    </div>
    <div class="card-body">
        <form asp-action="Index" method="get">
            <div class="d-flex flex-wrap">
                <div class="form-check me-3">
                    <input class="form-check-input" type="checkbox" name="statuses" value="Aberto" id="statusAberto" @(selectedStatuses.Contains("Aberto") ? "checked" : "")>
                    <label class="form-check-label" for="statusAberto">Aberto</label>
                </div>
                <div class="form-check me-3">
                    <input class="form-check-input" type="checkbox" name="statuses" value="Em Andamento" id="statusEmAndamento" @(selectedStatuses.Contains("Em Andamento") ? "checked" : "")>
                    <label class="form-check-label" for="statusEmAndamento">Em Andamento</label>
                </div>
                <div class="form-check me-3">
                    <input class="form-check-input" type="checkbox" name="statuses" value="Fechado" id="statusFechado" @(selectedStatuses.Contains("Fechado") ? "checked" : "")>
                    <label class="form-check-label" for="statusFechado">Fechado</label>
                </div>
            </div>
            <div class="mt-3">
                <button type="submit" class="btn btn-primary">Filtrar</button>
                <a asp-action="Index" class="btn btn-secondary">Limpar</a>
            </div>
        </form>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AdminNome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ColaboradorNome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Servico)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DataAlteracao)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DataCriacao)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Status)
                </th>
                @if (User.IsInRole("Admin"))
                {
                    <th>Ações</th>
                }
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AdminNome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ColaboradorNome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Servico)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataAlteracao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataCriacao)
                </td>
                <td>
                    @if (item.Status == "Aberto")
                    {
                        <span class="badge bg-success">@item.Status</span>
                    }
                    else if (item.Status == "Em Andamento")
                    {
                        <span class="badge bg-warning text-dark">@item.Status</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">@item.Status</span>
                    }
                </td>
                <td>
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-warning btn-sm">Editar</a>
                        <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-danger btn-sm">Excluir</a>
                        @if (item.Status == "Aberto")
                        {
                            <form asp-action="CloseTicket" asp-route-id="@item.ID" method="post" class="d-inline">
                                <button type="submit" class="btn btn-info btn-sm">Fechar Chamado</button>
                            </form>
                        }
                        else
                        {
                            <form asp-action="ReopenTicket" asp-route-id="@item.ID" method="post" class="d-inline">
                                <button type="submit" class="btn btn-success btn-sm">Reabrir Chamado</button>
                            </form>
                        }
                    }
                </td>
            </tr>
    }
        </tbody>
    </table>
</div>
