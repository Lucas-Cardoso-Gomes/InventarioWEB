@model Web.Models.User
@using Web.Models

@{
    ViewData["Title"] = "Editar Usuário";
}

<h1>@ViewData["Title"]</h1>

<h4>Usuário</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Nome" class="control-label"></label>
                        <input asp-for="Nome" class="form-control" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Login" class="control-label"></label>
                        <input asp-for="Login" class="form-control" />
                        <span asp-validation-for="Login" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="password" class="control-label">Nova Senha</label>
                        <input name="password" type="password" class="form-control" placeholder="Deixe em branco para não alterar" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Role" class="control-label"></label>
                        <select asp-for="Role" class="form-control" asp-items="Html.GetEnumSelectList<Role>()"></select>
                        <span asp-validation-for="Role" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="CPF" class="control-label"></label>
                        <input asp-for="CPF" class="form-control" />
                        <span asp-validation-for="CPF" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="CoordenadorId" class="control-label"></label>
                        <select asp-for="CoordenadorId" class="form-control" asp-items="ViewBag.CoordenadorId">
                            <option value="">Nenhum</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Setor" class="control-label"></label>
                        <input asp-for="Setor" class="form-control" />
                        <span asp-validation-for="Setor" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <h5 class="mt-4">Credenciais</h5>
            <hr />
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="SenhaEmail" class="control-label"></label>
                        <input asp-for="SenhaEmail" class="form-control" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Teams" class="control-label"></label>
                        <input asp-for="Teams" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="SenhaTeams" class="control-label"></label>
                        <input asp-for="SenhaTeams" class="form-control" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="EDespacho" class="control-label"></label>
                        <input asp-for="EDespacho" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="SenhaEDespacho" class="control-label"></label>
                        <input asp-for="SenhaEDespacho" class="form-control" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Genius" class="control-label"></label>
                        <input asp-for="Genius" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="SenhaGenius" class="control-label"></label>
                        <input asp-for="SenhaGenius" class="form-control" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Ibrooker" class="control-label"></label>
                        <input asp-for="Ibrooker" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="SenhaIbrooker" class="control-label"></label>
                        <input asp-for="SenhaIbrooker" class="form-control" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Adicional" class="control-label"></label>
                        <input asp-for="Adicional" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="SenhaAdicional" class="control-label"></label>
                        <input asp-for="SenhaAdicional" class="form-control" />
                    </div>
                </div>
            </div>

            <h5 class="mt-4">Outras Informações</h5>
            <hr />
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Smartphone" class="control-label"></label>
                        <input asp-for="Smartphone" class="form-control" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="TelefoneFixo" class="control-label"></label>
                        <input asp-for="TelefoneFixo" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Ramal" class="control-label"></label>
                        <input asp-for="Ramal" class="form-control" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Alarme" class="control-label"></label>
                        <input asp-for="Alarme" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Videoporteiro" class="control-label"></label>
                        <input asp-for="Videoporteiro" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Obs" class="control-label"></label>
                <textarea asp-for="Obs" class="form-control"></textarea>
            </div>


            <div class="form-group mt-3">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para a Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
