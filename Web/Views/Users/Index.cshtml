@model Web.Models.UserIndexViewModel

@{
    ViewData["Title"] = "Gerenciamento de Usuários";
}

<h1>@ViewData["Title"]</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}
@if (TempData["WarningMessage"] != null)
{
    <div class="alert alert-warning">@TempData["WarningMessage"]</div>
}

<div class="row mb-3">
    <div class="col-12">
        <a asp-action="Create" class="btn btn-primary">Criar Novo Usuário</a>
        <div class="dropdown d-inline-block">
            <button class="btn btn-secondary dropdown-toggle" type="button" id="columnVisibilityDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                Exibir/Ocultar Colunas
            </button>
            <div class="dropdown-menu" aria-labelledby="columnVisibilityDropdown" id="column-visibility-menu">
            </div>
        </div>
        @if (User.IsInRole("Admin"))
        {
            <form asp-controller="Migration" asp-action="CreateColaboradorUsers" method="post" style="display:inline;">
                <button type="submit" class="btn btn-secondary">Criar Usuários de Colaboradores</button>
            </form>
        }
    </div>
</div>

<form asp-action="Index" method="get" class="card mb-4" id="users-filter-form">
    <div class="card-header" id="filterHeader">
        <h5 class="mb-0">
            <button class="btn btn-link text-decoration-none" type="button" data-bs-toggle="collapse" data-bs-target="#filterCollapse" aria-expanded="true" aria-controls="filterCollapse">
                Filtros
            </button>
        </h5>
    </div>
    <div id="filterCollapse" class="collapse show" aria-labelledby="filterHeader">
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-9">
                    <label for="searchString" class="form-label">Pesquisa Geral</label>
                    <input type="text" name="searchString" id="searchString" class="form-control" placeholder="Pesquisar por Nome, Login, Colaborador..." value="@Model.SearchString">
                </div>
                <div class="col-md-3">
                    <label class="form-label">Cargos</label>
                    <div class="border rounded p-2" style="height: 150px; overflow-y: auto;">
                        @foreach (var role in Model.Roles)
                        {
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="currentRoles" value="@role" id="role-@role" @(Model.CurrentRoles.Contains(role) ? "checked" : "")>
                                <label class="form-check-label" for="role-@role">@role</label>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer text-end">
            <a asp-action="Index" class="btn btn-secondary" id="clear-filters-btn">Limpar Filtros</a>
            <button type="submit" class="btn btn-primary">Aplicar Filtros</button>
        </div>
    </div>
</form>

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th class="col-nome">
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["NomeSortParm"]" asp-route-searchString="@Model.SearchString">Nome</a>
                </th>
                <th class="col-login">
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["LoginSortParm"]" asp-route-searchString="@Model.SearchString">Login</a>
                </th>
                <th class="col-role">
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["RoleSortParm"]" asp-route-searchString="@Model.SearchString">Cargo</a>
                </th>
                <th class="col-colaborador">Colaborador</th>
                <th class="col-coordenador">Coordenador?</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Users)
            {
                <tr>
                    <td class="col-nome">@Html.DisplayFor(modelItem => item.Nome)</td>
                    <td class="col-login">@Html.DisplayFor(modelItem => item.Login)</td>
                    <td class="col-role">@Html.DisplayFor(modelItem => item.Role)</td>
                    <td class="col-colaborador">@Html.DisplayFor(modelItem => item.Colaborador.Nome)</td>
                    <td class="col-coordenador">@(item.IsCoordinator ? "Sim" : "Não")</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
        <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
            <a class="page-link" asp-action="Index"
               asp-route-sortOrder="@Model.CurrentSort"
               asp-route-searchString="@Model.SearchString"
               asp-route-pageNumber="@(Model.PageNumber - 1)"
               asp-route-pageSize="@Model.PageSize">Anterior</a>
        </li>
        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                <a class="page-link" asp-action="Index"
                   asp-route-sortOrder="@Model.CurrentSort"
                   asp-route-searchString="@Model.SearchString"
                   asp-route-pageNumber="@i"
                   asp-route-pageSize="@Model.PageSize">@i</a>
            </li>
        }
        <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
            <a class="page-link" asp-action="Index"
               asp-route-sortOrder="@Model.CurrentSort"
               asp-route-searchString="@Model.SearchString"
               asp-route-pageNumber="@(Model.PageNumber + 1)"
               asp-route-pageSize="@Model.PageSize">Próxima</a>
        </li>
    </ul>
</nav>

@section Scripts {
    <script src="~/js/user-list.js" asp-append-version="true"></script>
    <script src="~/js/user-filter-persistence.js" asp-append-version="true"></script>
}
