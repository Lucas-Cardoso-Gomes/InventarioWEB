@model IEnumerable<Web.Models.Periferico>

@{
    ViewData["Title"] = "Periféricos";
}

<h1>Periféricos</h1>

<div class="row mb-3">
    <div class="col-md-6">
        @if (User.IsInRole("Admin") || User.IsInRole("Coordenador"))
        {
            <a asp-action="Create" class="btn btn-primary">Adicionar Novo Periférico</a>
        }
    </div>
    <div class="col-md-6">
        <form asp-action="Index" method="get">
            <div class="input-group">
                <input type="text" name="searchString" class="form-control" placeholder="Procurar..." value="@ViewData["CurrentFilter"]">
                <button class="btn btn-outline-secondary" type="submit">Procurar</button>
                <a asp-action="Index" class="btn btn-outline-secondary">Limpar</a>
            </div>
        </form>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Tipo)</th>
                <th>Usuário</th>
                <th>@Html.DisplayNameFor(model => model.DataEntrega)</th>
                <th>@Html.DisplayNameFor(model => model.PartNumber)</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Tipo)</td>
                    <td>@Html.DisplayFor(modelItem => item.User.Nome)</td>
                    <td>@Html.DisplayFor(modelItem => item.DataEntrega)</td>
                    <td>@Html.DisplayFor(modelItem => item.PartNumber)</td>
                    <td>
                        @if (User.IsInRole("Admin") || User.IsInRole("Coordenador"))
                        {
                            <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-warning btn-sm">Editar</a>
                            <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-danger btn-sm">Excluir</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="pagination">
    Página @ViewBag.PageNumber de @(Math.Ceiling((double)ViewBag.TotalCount / ViewBag.PageSize))
    @if ((int)ViewBag.PageNumber > 1)
    {
        <a href="@Url.Action("Index", new { pageNumber = ViewBag.PageNumber - 1, pageSize = ViewBag.PageSize, searchString = ViewData["CurrentFilter"] })" class="btn btn-default">
            &laquo; Anterior
        </a>
    }
    @if ((int)ViewBag.PageNumber < (int)Math.Ceiling((double)ViewBag.TotalCount / ViewBag.PageSize))
    {
        <a href="@Url.Action("Index", new { pageNumber = ViewBag.PageNumber + 1, pageSize = ViewBag.PageSize, searchString = ViewData["CurrentFilter"] })" class="btn btn-default">
            Próximo &raquo;
        </a>
    }
</div>
