@model IEnumerable<Web.Models.Colaborador>
@using System.Linq

@functions {
    public string FormatCpf(string cpf)
    {
        if (string.IsNullOrEmpty(cpf)) return "";
        string numericCpf = new string(cpf.Where(char.IsDigit).ToArray());
        if (numericCpf.Length != 11) return cpf;
        return Convert.ToUInt64(numericCpf).ToString(@"000\.000\.000\-00");
    }
}

@{
    ViewData["Title"] = "Colaboradores";
}

<h1>Colaboradores</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<div class="row mb-3">
    <div class="col-md-8">
        @if (User.IsInRole("Admin"))
        {
            <a asp-action="Create" class="btn btn-primary">Adicionar Novo</a>
            <!-- Botão para acionar o modal de importação -->
            <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#importModal">
                Importar de Excel
            </button>
        }
    </div>
    <div class="col-md-4">
        <form asp-action="Index" method="get">
            <div class="input-group">
                <input type="text" name="searchString" class="form-control" placeholder="Procurar por nome, CPF ou e-mail..." value="@ViewData["CurrentFilter"]">
                <button class="btn btn-outline-secondary" type="submit">Procurar</button>
                 <a asp-action="Index" class="btn btn-outline-secondary">Limpar</a>
            </div>
        </form>
    </div>
</div>


<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Nome)</th>
                <th>@Html.DisplayNameFor(model => model.Email)</th>
                <th>@Html.DisplayNameFor(model => model.Filial)</th>
                <th>@Html.DisplayNameFor(model => model.Setor)</th>
                <th>@Html.DisplayNameFor(model => model.DataInclusao)</th>
                <th>@Html.DisplayNameFor(model => model.DataAlteracao)</th>
                <th>Coordenador</th>
                @if (User.IsInRole("Admin") || User.IsInRole("Coordenador"))
                {
                    <th>Ações</th>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                    <td>@Html.DisplayFor(modelItem => item.Filial)</td>
                    <td>@Html.DisplayFor(modelItem => item.Setor)</td>
                    <td>@Html.DisplayFor(modelItem => item.DataInclusao)</td>
                    <td>@Html.DisplayFor(modelItem => item.DataAlteracao)</td>
                    <td>@Html.DisplayFor(modelItem => item.CoordenadorNome)</td>
                    @if (User.IsInRole("Admin") || User.IsInRole("Coordenador"))
                    {
                        <td>
                             @if (User.IsInRole("Admin"))
                            {
                                <a asp-action="Edit" asp-route-id="@item.CPF" class="btn btn-warning btn-sm">Editar</a>
                                <a asp-action="Delete" asp-route-id="@item.CPF" class="btn btn-danger btn-sm">Excluir</a>
                            }
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Modal de Importação -->
@if (User.IsInRole("Admin"))
{
    <div class="modal fade" id="importModal" tabindex="-1" aria-labelledby="importModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <form asp-action="Import" method="post" enctype="multipart/form-data">
                    <div class="modal-header">
                        <h5 class="modal-title" id="importModalLabel">Importar Colaboradores de Arquivo Excel</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <p>Selecione um arquivo Excel (.xlsx ou .xls) para importar. O arquivo deve ter as colunas na seguinte ordem: CPF, Nome, Email, etc.</p>
                        <div class="mb-3">
                            <label for="file" class="form-label">Arquivo Excel</label>
                            <input type="file" name="file" class="form-control" accept=".xlsx, .xls" required />
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
                        <button type="submit" class="btn btn-primary">Importar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}
