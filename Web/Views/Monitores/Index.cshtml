@model IEnumerable<web.Models.Monitor>

@{
    ViewData["Title"] = "Monitores";
}

<h1>Monitores</h1>

<div class="row mb-3">
    <div class="col-md-6">
        @if (User.IsInRole("Admin") || User.IsInRole("Coordenador"))
        {
            <a asp-action="Create" class="btn btn-primary">Adicionar Novo Monitor</a>
        }
    </div>
    <div class="col-md-6">
        <form asp-action="Index" method="get">
            <div class="input-group">
                <input type="text" name="searchString" class="form-control" placeholder="Procurar..." value="@ViewData["CurrentFilter"]">
                <button class="btn btn-outline-secondary" type="submit">Procurar</button>
                <a asp-action="Index" class="btn btn-outline-secondary">Limpar</a>
            </div>
        </form>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.PartNumber)</th>
                <th>@Html.DisplayNameFor(model => model.ColaboradorNome)</th>
                <th>@Html.DisplayNameFor(model => model.Marca)</th>
                <th>@Html.DisplayNameFor(model => model.Modelo)</th>
                <th>@Html.DisplayNameFor(model => model.Tamanho)</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.PartNumber)</td>
                    <td>@Html.DisplayFor(modelItem => item.ColaboradorNome)</td>
                    <td>@Html.DisplayFor(modelItem => item.Marca)</td>
                    <td>@Html.DisplayFor(modelItem => item.Modelo)</td>
                    <td>@Html.DisplayFor(modelItem => item.Tamanho)</td>
                    <td>
                        @if (User.IsInRole("Admin") || User.IsInRole("Coordenador"))
                        {
                            <a asp-action="Edit" asp-route-id="@item.PartNumber" class="btn btn-warning btn-sm">Editar</a>
                            <a asp-action="Delete" asp-route-id="@item.PartNumber" class="btn btn-danger btn-sm">Excluir</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
