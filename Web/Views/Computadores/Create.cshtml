@model Web.Models.Computador

@{
    ViewData["Title"] = "Adicionar Computador";
}

<h1>@ViewData["Title"]</h1>
<h4>Computador</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <p class="text-muted">Esta tela cria uma entrada manual para um computador. Os detalhes de Disco, GPU e Rede não podem ser adicionados aqui e devem ser obtidos através do agente de coleta.</p>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="MAC" class="control-label"></label>
                        <input asp-for="MAC" class="form-control" placeholder="XX-XX-XX-XX-XX-XX" />
                        <span asp-validation-for="MAC" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="IP" class="control-label"></label>
                        <input asp-for="IP" class="form-control" />
                        <span asp-validation-for="IP" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Usuario" class="control-label"></label>
                        <input asp-for="Usuario" class="form-control" />
                        <span asp-validation-for="Usuario" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Hostname" class="control-label"></label>
                        <input asp-for="Hostname" class="form-control" />
                        <span asp-validation-for="Hostname" class="text-danger"></span>
                    </div>
                     <div class="form-group">
                        <label asp-for="SO" class="control-label"></label>
                        <input asp-for="SO" class="form-control" />
                        <span asp-validation-for="SO" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Fabricante" class="control-label"></label>
                        <input asp-for="Fabricante" class="form-control" />
                        <span asp-validation-for="Fabricante" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="ProcessadorNome" class="control-label"></label>
                        <input asp-for="ProcessadorNome" class="form-control" />
                        <span asp-validation-for="ProcessadorNome" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ProcessadorFabricante" class="control-label"></label>
                        <input asp-for="ProcessadorFabricante" class="form-control" />
                        <span asp-validation-for="ProcessadorFabricante" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ProcessadorCores" class="control-label"></label>
                        <input asp-for="ProcessadorCores" class="form-control" />
                        <span asp-validation-for="ProcessadorCores" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ProcessadorThreads" class="control-label"></label>
                        <input asp-for="ProcessadorThreads" class="form-control" />
                        <span asp-validation-for="ProcessadorThreads" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ProcessadorClock" class="control-label"></label>
                        <input asp-for="ProcessadorClock" class="form-control" />
                        <span asp-validation-for="ProcessadorClock" class="text-danger"></span>
                    </div>
                     <div class="form-group">
                        <label asp-for="RamTotal" class="control-label"></label>
                        <input asp-for="RamTotal" class="form-control" />
                        <span asp-validation-for="RamTotal" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Criar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Voltar para a Lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}