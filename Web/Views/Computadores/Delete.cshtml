@model web.Models.Computador

@{
    ViewData["Title"] = "Excluir Computador";
}

<h1>@ViewData["Title"]</h1>
<h3>Tem certeza que deseja excluir este computador?</h3>
<div>
    <h4>Computador</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MAC)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MAC)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IP)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IP)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Hostname)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Hostname)
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="MAC" />
        <input type="submit" value="Excluir" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar para a Lista</a>
    </form>
</div>